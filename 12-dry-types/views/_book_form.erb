<% form({ method: :post },{ obj: @parameters }) do |f|%>
    <div class="grid-x grid-margin-x">
            <div class="cell large-12">
                <%= f.input(:title, type: :text, label: 'Название книги', placeholder: 'Путь Ruby')%>
            </div>
            <div class="cell large-12">
                <%= f.input(:author, type: :text, label: 'Автор', placeholder: 'Фултон Хел')%>
            </div>
            <div class="cell large-12">
                <%= f.input(:published_on, type: :date, label: 'Дата публикации', placeholder: '2015-12-10')%>
            </div>
            <div class="cell large-12">
                <%= f.input(:mark, type: :radioset, label: 'Оценка', options: 1.upto(5).to_a)%>
            </div>
            <div class="cell large-12">
                <%= f.input(:circulation, type: :text, label: 'Тираж (в тыс. экземплярах)', placeholder: '2.5')%>
            </div>
            <div class="cell large-12">
                <%= f.input(:cover_type, type: :select, label: 'Тип обложки', options: BookCoverType.all_types, add_blank: true)%>
            </div>
            <div class="cell large-12">
                <%= f.button(value: form_type, class: 'button') %>
                <a href="<%= back_location %>" class="button secondary">Отмена</a>
            </div> 
    </div>
<% end %>